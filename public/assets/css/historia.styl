.list
    width: 1000px
    display: flex;
    flex-flow: row wrap;
    margin: 70px auto 0 auto   


.list__item
    width: 50%
    display: flex
    padding: 20px

.list__image
    width 35%

.list__image-img
    height: 100%

.list__info
    width: 65%
    height 100%
    margin-top: 15px

.list__info-text
    font-family: Courgette
    display: block
    margin-bottom: 7px