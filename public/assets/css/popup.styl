 .form-user,
 .center-box
    margin-top: 30px
    width: 350px
    height auto
    background-color: red
    padding: 10px 20px
    h1
        margin-bottom: 25px
        text-align: center
    .input-form
        display: flex
        justify-content: space-between
        margin-bottom: 5px
        label
            font-size: .9em
        input
            border-radius: 3px
            height 23px
            &:focus
                outline: none
    .buttons-form-user
        display: flex
        justify-content: space-around
        align-items: center
        margin-top: 15px
        button
            width: 80px
            height : 30px
            background-color: black
            color: white
            border: none
            border-radius: 3px
            cursor pointer

.external-box
    background-color rgba(0, 0, 0, .5)
    bottom 0    
    left 0
    overflow auto
    position fixed
    right 0
    top 0
    z-index 100

.internal-box
    position relative
    width 350px
    height auto
    margin 0 auto
    box-shadow: 2px 2px 2px
    z-index 999
    .image
        width 10px
        margin-right: 0px
        z-index 1000
        position absolute
        right 5px
        top 0px
        img
            width 100%
            cursor pointer
    .center-box
        background #fff
        margin 0 auto
        position relative
        padding 30px 20px
        border-radius: 4px
        h2
            box-sizing border-box
            color #000
            font-size 15px
            font-family Bangers
            letter-spacing: 1px
            left 0
            margin 0
            padding 5px
            position absolute
            text-align left
            top 0
            width 100%
        label
            display block
        input
            width 70%

.parent-box
    display table
    height 100%
    width 100%

.children-box
    display table-cell
    vertical-align middle

.new-User
    position absolute
    right 15px

.loading
    width 38px
    height 38px
    background-color white
    display block
    margin: 0 auto
    .circle-parent
        position relative
        background linear-gradient(#248DCD,white) 
        border-radius 50%
        width 35px
        height 35px
        text-align center
        animation load .3s infinite linear
        .circle-child
            position: absolute
            background-color white
            border-radius: 50%
            left 2.5px
            top 2.5px
            padding: 5px
            width 29px
            height 29px

@keyframes load{

    0%{
        transform: rotate(0deg)
    }
    100%{
        transform: rotate(360deg)
    } 
}

        
