*
    padding 0px
    margin 0px
    box-sizing border-box

.grilla
    margin-top: 40px
    .grilla__users
        display: block
        margin 50px auto
        width 700px
        .grilla__contentItems
            background-color: gray
            display: flex
            justify-content: space-around
            align-items: center
            padding-bottom: 20px
            .grilla__item
                width: 70px
                text-align: center
                img
                    width 25px
                    cursor pointer
    div
        .grilla__btnAddUser
            width: 40px
            height 40px
            display: block
            margin: 0 auto
            margin-top: 40px
            cursor pointer
    

.hide
    display none

.list
    display: block

.header
    padding-bottom: 20px

.grilla__title
    text-align: center
